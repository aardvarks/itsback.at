//
// DOMAIN FORM
// ===========
//

.domain-form
  position fixed
  top 50%
  left 0
  width 100%
  display flex
  justify-content center
  transform translateY(-50%)
  padding 0 20px
  transition transform 0.5s, top 0.5s

  +width-min($mq--tablet)
    padding 0 40px

  .is-submitted &
    top 0
    transform none

.domain-form__inner
  position relative
  overflow hidden

.domain-form__input
  width 100%
  padding-right 45px

  +width-min($mq--tablet)
    padding-right 60px

  &.not-empty
    border-color $color--white

.domain-form__action
  position absolute
  top 0
  right 0
  width 35px
  height 70px
  transition width 0.5s, height 0.5s

  +width-min($mq--tablet)
    width 45px
    height 100px

  .is-submitted &
    width 35px
    height 70px

  .button
    position absolute
    width 100%
    height 100%
    text-indent -9999px

    &:focus
      outline 0

  .icon
    position absolute
    width 100%
    height 100%
    transition opacity 0.2s, transform 0.2s

  svg
    width 100%
    height 100%
    fill $color--blue-grey--50
    transition fill 0.2s

    .domain-form__input:focus ~ &
      fill $color--white

    .domain-form__input.not-empty ~ &
      fill $color--white

.icon--link
  .domain-form__input:valid ~ .domain-form__action &
    opacity 0
    transform translateY(-50px)

.icon--arrow
  padding-left 5px
  opacity 0
  transform translateY(50px)

  .domain-form__input:valid ~ .domain-form__action &
    opacity 1
    transform none
