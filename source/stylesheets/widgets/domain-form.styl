//
// DOMAIN FORM
// ===========
//

.domain-form
  position fixed
  top 50%
  left 0
  width 100%
  display flex
  justify-content center
  transform translateY(-50%)
  padding 0 20px

  +width-min($mq--tablet)
    padding 0 40px

.domain-form__inner
  position relative
  overflow hidden

.domain-form__input
  width 100%
  padding-right 45px

  +width-min($mq--tablet)
    padding-right 60px

  &.not-empty
    border-color $color--white

.domain-form__action
  position absolute
  top 0
  right 0
  width 40px
  height 70px

  +width-min($mq--tablet)
    width 50px
    height 100px

  .button
    position absolute
    width 100%
    height 100%
    text-indent -9999px

    &:focus
      outline 0

  .icon
    position absolute
    width 100%
    height 100%
    transition opacity 0.2s, transform 0.2s

  svg
    width 100%
    height 100%
    fill $color--blue-grey--50
    transition fill 0.2s

    .domain-form__input:focus ~ &
      fill $color--white

    .domain-form__input.not-empty ~ &
      fill $color--white

.icon--link
  .domain-form__input:valid ~ .domain-form__action &
    opacity 0
    transform translateY(-50px)

.icon--arrow
  opacity 0
  transform translateY(50px)

  .domain-form__input:valid ~ .domain-form__action &
    opacity 1
    transform none
