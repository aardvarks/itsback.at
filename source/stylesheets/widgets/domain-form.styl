//
// DOMAIN FORM
// ===========
//

.domain-form
  display flex
  justify-content center
  width 100%

.domain-form__inner
  position relative
  overflow hidden

.domain-form__input
  width 100%
  padding-right 50px

  &.not-empty
    border-color $color--white

.domain-form__action
  position absolute
  top 0
  right 0
  width 50px
  height 100px

  .button
    position absolute
    width 100%
    height 100%
    text-indent -9999px

    &:focus
      outline 0

  .icon
    position absolute
    width 100%
    height 100%
    transition opacity 0.2s, transform 0.2s

  svg
    width 100%
    height 100%
    fill $color--blue-grey--50
    transition fill 0.2s

    .domain-form__input:focus ~ &
      fill $color--white

    .domain-form__input.not-empty ~ &
      fill $color--white

.icon--link
  left 4px

  .domain-form__input:valid ~ .domain-form__action &
    opacity 0
    transform translateY(-50px)

.icon--arrow
  left 9px
  opacity 0
  transform translateY(50px)

  .domain-form__input:valid ~ .domain-form__action &
    opacity 1
    transform none
