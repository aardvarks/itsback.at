.header
  display flex
  justify-content space-between
  align-items center
  width 100%
  height 100px
  padding 0 40px

.help
  display flex
  justify-content center
  align-items center
  font-family arial
  font-weight bold
  font-size 20px
  width 35px
  height 35px
  border 3px solid $color--blue-grey--50
  border-radius 50%
  color $color--blue-grey--50
